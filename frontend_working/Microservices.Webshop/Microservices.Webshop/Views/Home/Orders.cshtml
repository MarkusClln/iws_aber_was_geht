@model List<Order>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Produktanzahl</th>
                        <th class="text-center">Preis</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-sm-8 col-md-6">
                                <div class="media">
                                    <div class="media-body">
                                        <h4 class="media-heading">Bestellung: @item.BillNumber</h4>
                                        <span>Status: </span><span class="text-success"><strong>In Bearbeitung</strong></span>
                                    </div>
                                </div>
                            </td>
                            @{ var cnt = 0;}

                            @foreach (var product in item.Items)
                            {
                                cnt += product.Count;
                            }
                            <td class="col-sm-1 col-md-1 text-center"><strong>@cnt</strong></td>
                            <td class="col-sm-1 col-md-1 text-center"><strong>@item.Price €</strong></td>
                        </tr>
                    }

                   



                </tbody>
            </table>
        </div>
    </div>
</div>