@model AdministrationViewModel

@{
    ViewData["Title"] = "Administration";
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container">
    <table class="table table-striped">
        <tbody>
            <tr>
                <td colspan="1">
                    <div class="row">
                        <div class="col-md-6">
                            <form asp-controller="Home" asp-action="AddProduct" method="post">

                                <h2>Produkt hinzufügen</h2>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @*<input type="hidden" asp-for="Id" />*@
                                <div class="form-group">
                                    <label asp-for="ProductId" class="control-label"></label>
                                    <input asp-for="ProductId" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductName" class="control-label"></label>
                                    <input asp-for="ProductName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductDescription" class="control-label"></label>
                                    <input asp-for="ProductDescription" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductPrice" class="control-label"></label>
                                    <input asp-for="ProductPrice" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ProductQuantity" class="control-label"></label>
                                    <input asp-for="ProductQuantity" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>


                </td>
                <td colspan="1">

                    <div class="row">
                        <div class="col-md-6">
                            <form asp-controller="Home" asp-action="AddCampaign" method="post">

                                <h2>Produkt hinzufügen</h2>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @*<input type="hidden" asp-for="Id" />*@
                                <div class="form-group">
                                    <label asp-for="MarketingProductId" class="control-label"></label>
                                    <input asp-for="MarketingProductId" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="MarketingDiscount" class="control-label"></label>
                                    <input asp-for="MarketingDiscount" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>


                </td>
            </tr>
        </tbody>
    </table>
</div>